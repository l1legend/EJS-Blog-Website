<%- include("partials/header"); -%>

    <h1>Compose</h1>

    <form class="" action="/compose" method="post">
        <div class="form-group">
            <label for="postTitle">Title</label>
            <input type="text" class="form-control" name="postTitle" autocomplete="off" />
            <label for="postBody">Post</label>
            <textarea class="form-control" name="postBody" row="5" cols="30"></textarea>
        </div>
        <button type="submit" class="btn btn-primary" name="button">Publish</button>
    </form>

    <%- include("partials/footer"); -%>